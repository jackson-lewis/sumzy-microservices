generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  one_time
  recurring
}

model Expense {
  id        Int     @id @default(autoincrement())
  userId    Int
  amount    Int
  type      TransactionType
  category  Int
  frequency String?
  date      DateTime @default(now())
}

model Category {
  id      Int     @id @default(autoincrement())
  userId  Int  
  name    String
  type    TransactionType
}