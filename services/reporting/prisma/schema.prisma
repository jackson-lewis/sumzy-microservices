generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int       @id @default(autoincrement())
  aggregateId Int
  eventData   Json
  eventType   EventType
  createdAt   DateTime  @default(now())
}

model Report {
  id              Int      @id @default(autoincrement())
  userId          Int
  tIncome         Int
  tExpense        Int
  tCategories     Json
  compare         Json
  date            DateTime @default(now())
  lastUpdatedDate DateTime @default(now())
  tSurplus        Int
}

enum EventType {
  created
  updated
  deleted
}
